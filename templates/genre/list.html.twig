{% extends 'layout.html.twig' %}

{% block title %}Genre List | {{ parent() }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">

            <div class="col-md-12 mx-auto text-center">
                <h1 class="patua mt-3">Genres List</h1>
                <div class="form-group">

                    <form action="{{ path('genre_list_filter') }}" method="post">
                        <label for="filter_typeMedia">Types filter</label>
                        <select class="form-control" id="filter_typeMedia" name="filter" onchange="this.form.submit();">
                            {% for type in types %}
                                {% if idTypeMedia == type.id %}
                                    <option value="{{ type.id }}" selected>{{ type.name }}</option>
                                {% else %}
                                    <option value="{{ type.id }}">{{ type.name }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </form>

                </div>
            </div>

            <div class="col-md-6 mx-auto">
                <table class="table table-hover bg-light">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Type</th>
                        <th scope="col">Edit</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for genre in genres %}
                        {% if idTypeMedia is not null and idTypeMedia == genre.typeMedia.id %}
                            <tr>
                                <td>{{ genre.name }}</td>
                                <td>{{ genre.typeMedia.name }}</td>
                                <td>
                                    <a href="{{ path('user_detail',{'id':genre.id}) }}">
                                        <img src="{{ asset('img/edit.png') }}" width="28" alt="view detail">
                                    </a>
                                </td>
                            </tr>
                        {% endif %}
                        {% if idTypeMedia is null %}
                            <tr>
                                <td>{{ genre.name }}</td>
                                <td>{{ genre.typeMedia.name }}</td>
                                <td>
                                    <a href="{{ path('user_detail',{'id':genre.id}) }}">
                                        <img src="{{ asset('img/edit.png') }}" width="28" alt="view detail">
                                    </a>
                                </td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>

{% endblock %}