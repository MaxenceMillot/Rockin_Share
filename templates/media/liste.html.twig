{% extends 'layout.html.twig' %}

{% block title %}Liste des médias | {{ parent() }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row ">

            <div class="col-md-12 mx-auto text-center">
                <h1 class="patua">Media</h1>
            </div>

            <div class="col-md-10 mx-auto">
                <table class="table table-hover bg-light">
                    <thead class="thead-dark">
                    <tr class="text-center" >
                        <th scope="col" style="width: 20%">Picture</th>
                        <th scope="col" style="width: 50%">Name</th>
                        <th scope="col" style="width: 50%">Genres</th>
                        <th scope="col" style="width: 25%">Edit</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for media in listeMedias %}
                        <tr class="text-center" id="table-media">
                            <td><img src="{{ asset('files/pictures/' ~ media.getPicture()) }}.jpg" width="128" alt="{{ media.name }}"> </td>
                            <td class="font-weight-bold">{{ media.name }}</td>
                            <td>
                                <ul class="list-group list-group-flush">
                                    {% for genre in media.getGenre() %}
                                        <li class="list-group-item">{{ genre.name }}</li>
                                    {% endfor %}
                                </ul>
                            </td>
                            <td>
                                <a href="{{ path('user_detail',{'id':media.id}) }}">
                                    <img src="{{ asset('img/external.png') }}" width="28" alt="view detail">
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
    </div>

{% endblock %}