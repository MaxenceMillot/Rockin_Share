{% extends 'layout.html.twig' %}

{% block title %}Update user | {{ parent() }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row mx-auto">
            <div class="col-md-6 card mx-auto mt-3 p-2">
                <h1 class="text-center patua">Edit User</h1>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {% if is_granted('ROLE_ADMIN') %}
                            {% if "ROLE_ADMIN" in user.roles %}
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="isAdmin" name="isAdmin" checked>
                                    <label class="form-check-label" for="isAdmin">Role Admin</label>
                                </div>
                             {% else %}
                                 <div class="form-check">
                                     <input type="checkbox" class="form-check-input" id="isAdmin" name="isAdmin">
                                     <label class="form-check-label" for="isAdmin">Role Admin</label>
                                 </div>
                            {% endif %}
                {% endif %}

                <div class="container">
                    <div class="row">
                        <div class="col-md-6 mx-auto">
                            <div class="text-center">
                                <button class="btn btn-success btn-lg" type="submit">Update</button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            {% if app.user.username is same as(user.username)%}
                                <div class="text-center">
                                    <a href="{{ path('account_update_password') }}" class="btn btn-warning btn-lg">Change Password</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {{ form_end(form) }}


            </div>
        </div>
    </div>
{% endblock %}